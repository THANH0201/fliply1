<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.QuizzesController"
            prefWidth="375" prefHeight="750"
            style="-fx-background-color: #F6F7FB;">

    <!-- Header -->
    <top>
        <fx:include fx:id="header" source="../components/header.fxml"/>
    </top>

    <!-- Content -->
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;">
            <content>
                <VBox spacing="14">
                    <padding>
                        <Insets top="18" right="18" bottom="18" left="18"/>
                    </padding>
                    <Label fx:id="totalLabel"
                           style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #1F1F39;"
                           text="Total: 0"/>
                    <VBox fx:id="listBox" spacing="14"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Menu -->
    <bottom>
        <AnchorPane prefHeight="95">
            <children>
                <fx:include source="../components/menu.fxml"
                            AnchorPane.leftAnchor="0"
                            AnchorPane.rightAnchor="0"
                            AnchorPane.bottomAnchor="0"/>
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
