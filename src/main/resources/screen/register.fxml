<VBox prefHeight="720.0" prefWidth="360.0" spacing="14" style="-fx-background-color: #FFFFFF;" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header xanh nháº¡t -->
    <AnchorPane prefHeight="180.0" style="-fx-background-color: #D9F4F1;">
        <VBox spacing="6" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="28.0">
