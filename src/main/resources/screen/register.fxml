        </VBox>
    </AnchorPane>

    <!-- Tháº» form (Ä‘Ã¨ lÃªn mÃ©p header 1 chÃºt lÃ  Ä‘áº¹p; cÃ³ thá»ƒ giáº£m Region trÃªn náº¿u muá»‘n) -->
    <VBox alignment="TOP_LEFT" maxWidth="320.0" spacing="14" styleClass="card-elevated">
        <padding>
            <Insets bottom="18" left="18" right="18" top="18" />
        </padding>

        <!-- Name -->
        <Label styleClass="field-caption" text="Name" />
