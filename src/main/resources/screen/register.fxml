        <!-- Password + icon máº¯t -->
        <Label styleClass="field-caption" text="Password" />
        <HBox alignment="CENTER_LEFT" spacing="8">
            <PasswordField fx:id="pwdField" promptText="Password" styleClass="input" HBox.hgrow="ALWAYS" />
